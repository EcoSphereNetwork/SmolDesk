{
  "name": "smoldesk-tools",
  "version": "1.0.0",
  "description": "Development and build tools for SmolDesk project",
  "private": true,
  "type": "module",
  "scripts": {
    "build:icons": "node scripts/build-icons.js",
    "optimize:images": "node scripts/optimize-images.js", 
    "generate:types": "node scripts/generate-types.js",
    "bundle:analyze": "webpack-bundle-analyzer ../dist/assets",
    "security:check": "node scripts/security-check.js",
    "deps:check": "node scripts/check-dependencies.js",
    "release:prepare": "node scripts/prepare-release.js",
    "changelog:generate": "node scripts/generate-changelog.js",
    "license:check": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'",
    "crypto:generate": "node scripts/generate-crypto-keys.js",
    "config:validate": "node scripts/validate-config.js"
  },
  "keywords": [
    "build-tools",
    "development",
    "automation",
    "scripts"
  ],
  "author": "SmolDesk Team", 
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.1",
    "yargs": "^17.7.2",
    "glob": "^10.3.0",
    "fs-extra": "^11.1.1",
    "semver": "^7.5.0"
  },
  "devDependencies": {
    "sharp": "^0.32.0",
    "svgo": "^3.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "license-checker": "^25.0.1",
    "typescript": "^5.0.2",
    "@types/node": "^20.8.0",
    "@types/fs-extra": "^11.0.0",
    "@types/semver": "^7.5.0",
    "@types/yargs": "^17.0.0",
    "@types/inquirer": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git", 
    "url": "https://github.com/your-org/smoldesk.git",
    "directory": "tools"
  }
}
